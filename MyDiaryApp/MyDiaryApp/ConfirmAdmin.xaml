<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDiaryApp.ConfirmAdmin"
             Title="Confirm">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="16">

            <Label Text=" What iS you Favorite Food ?" Font="50"  TextColor="BlueViolet" />
            <Entry x:Name="PassAnswer1" Placeholder="Pizza" TextColor="DarkViolet" BackgroundColor="FloralWhite" />


            <Button x:Name="check" Text="Check"  TextColor="DarkViolet" Clicked="check_Clicked" BackgroundColor="FloralWhite"/>
        </StackLayout>
    </ContentPage.Content>



</ContentPage>