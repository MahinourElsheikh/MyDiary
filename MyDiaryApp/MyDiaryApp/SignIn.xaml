<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDiaryApp.SignIn"
             Title="SignIn">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="16">
            <Label Text="Password"  TextColor="BlueViolet"/>
            <Entry x:Name="PasswordText3" Placeholder="xxxxxx" TextColor="DarkViolet" BackgroundColor="FloralWhite" />
            <Button x:Name="ForgetPassword" Text="ForgotPassword" BackgroundColor="FloralWhite"  TextColor="DarkViolet"  Clicked="ForgetPassword_Clicked"/>
            <Button x:Name="SignIn1" Text="Sign In"  BackgroundColor="FloralWhite"  TextColor="DarkViolet" Clicked="SignIn1_Clicked"/>
        </StackLayout>
    </ContentPage.Content>




</ContentPage>