<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDiaryApp.ResetPassword"
             Title="Reset Password">

    <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="16">

            <Label Text="NewPassword" TextColor="BlueViolet" />
            <Entry x:Name="NewPasswordText1" BackgroundColor="FloralWhite" TextColor="DarkViolet" Placeholder="xxxxxx" />
            <Label Text=" Confirm New Password" TextColor="BlueViolet" />
            <Entry x:Name="NewPasswordText2" BackgroundColor="FloralWhite" TextColor="DarkViolet"  Placeholder="xxxxxx" />
            <Button x:Name="Reset" Text="Reset" BackgroundColor="FloralWhite" TextColor="DarkViolet" Clicked="Reset_Clicked" />
        </StackLayout>
    </ContentPage.Content>





</ContentPage>